<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <title>Ecommerce website by Ndifreke|<%= title %></title>
<body>
  <%- include('./partials/navbar.ejs') %>
  <div class="container-fluid">
      <div class="col text-center py-3">
        <h1>Add Product Details</h1>
      </div>
      <div class="row g-6">
        <div class="col-6 offset-3 border-secondary shadow py-3 px-5 rounded">
          <form class="form_container" method="post" action="/user/add" enctype="application/x-www-form-urlencoded">
            <div class="form-group mb-1">
              <label for="name" class="form-label"></label>
              <div class="">
                <input type="name" class="form-control" id="name" placeholder="name" name="name">
              </div>
            </div> 
            <div class="form-group mb-1">
              <label for="image" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="image" placeholder="Insert Image Url" name="image">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="brand" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="brand" placeholder="brand" name="brand">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="category" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="category" placeholder="category" name="category">
              </div>
            </div>
            <div class="form-group mb-5">
              <label for="description" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="description" placeholder="description" name="description">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="price" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="price" placeholder="price" name="price">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="countInStock" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="countInStock" placeholder="countInStock" name="countInStock">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="rating" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="rating" placeholder="rating" name="rating">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="numReviews" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="numReviews" placeholder="numReviews" name="numReviews">
              </div>
            </div>
            <div class="form-group mb-3">
              <div class="text-center">
                <input type="submit" class="btn btn-primary" id="submit" value="Add Product" >
              </div>
            </div>
          </form>
        </div>
      </div>
  </div>
    

 



  <%- include('./partials/footer.ejs') %>
</body>
</html>